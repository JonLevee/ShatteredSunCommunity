@inject GenerateBuildVersion.CSSVersionInfoBuilder builder
<!DOCTYPE html>
<cache enabled="false"/>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href=@AppendCSSVersion("bootstrap/bootstrap.min.css") />
    <link rel="stylesheet" href=@AppendCSSVersion("app.css") />
    <link rel="stylesheet" href=@AppendCSSVersion("ShatteredSunCommunity.styles.css") />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@code {
    public string AppendCSSVersion(string file)
    {
        var info = builder.GetCurrent();
        var hashCode = info.VersionInfo.Files.Single(f => f.File.EndsWith(file)).FileHashCode;
        var newLink = $"{file}?{hashCode}";
        return newLink;
    }
}
