@page "/unitView"
@inherits LayoutComponentBase
@using ShatteredSunCommunity.Components.PageComponents
@using ShatteredSunCommunity.Models
@using ShatteredSunCommunity.UnitSelect
@using Components.Pages
@using Components.PageComponents
@using System.Reflection
@using System.ComponentModel
@inject Models.SanctuarySunData data
@inject SelectionState selectionState
@rendermode InteractiveServer
@implements IDisposable

<style>
    * {
        border: none;
    }
</style>
<PageTitle>Unit Viewer</PageTitle>


<h1 class="unitView">UnitView</h1>
<h2>@ProductName</h2>
<table>
    <tbody>
        <tr>
            <td>
                <UnitSelect />
            </td>
            <td>
                <UnitViewGroupHeaders />
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <UnitViewGroupData />

            </td>
        </tr>
    </tbody>
</table>


@code {
    public string ProductName => Assembly.GetEntryAssembly()?.GetCustomAttribute<AssemblyProductAttribute>()?.Product;

    void selectUpdated(object sender, EventArgs args)
    {
        base.StateHasChanged();
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        selectionState.SelectionStateChanged += selectUpdated;
    }

        public void Dispose()
    {
        selectionState.SelectionStateChanged -= selectUpdated;
    }
}
